<%- include('import') %>
<body>
        <div class="d-flex" id="wrapper">
            <!--sidebar-->   
            <%- include('menu')%>
                
                <div id="page-content-wrapper">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary border-bottom">
                      <div class="container-fluid">
                          <button class="btn btn-light" id="sidebarToggle">
                              <i class="fa-solid fa-arrows-left-right fa-2xl"></i>
                          </button>                     
                      </div>
                    </nav> 
                    <!----------------------------------------------------------------->
                    <div class="container-fluid">
                        <div class="mt-4">
                          <!---------- table ---------->
                                <h1>This is table of your success <i class="fa-solid fa-file-pen fa-xl" style="color: #095253;"></i></h1>
                                <div class="mt-4"></div>
                                    <table class="table table-striped">
                                        <thead>
                                            <tr class="table-dark">
                                                <th scope="col">id</th>
                                                <th scope="col">weight</th>
                                                <th scope="col">height</th>
                                                <th scope="col">bmi</th>
                                                <th scope="col">date</th>
                                                <th scope="col">Delete</th>
                                            </tr>
                                        </thead>
                                        <!--วนloopแสดงข้อมูล-->
                                        <% bodymassindex.forEach(function(bmi){ %>
                                         
                                        <tr class="table-success">
                                                <td><%= bmi.id %></td>
                                                <td><%= bmi.weight %></td>
                                                <td><%= bmi.height %></td>
                                                <td><%= bmi.bmi %></td>
                                                <td><%= bmi.date %></td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/healthy/table-bmi/sucess_bmi/delete">
                                                        <div style="padding-left: 5px;">
                                                            <button type="submit" name="delete" class="rounded-button" style="background-color:aliceblue;">
                                                                <i<i class="fa-solid fa-trash fa-xl" style="color: #f0430a;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=bmi.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                        </tr>
                                
                                        <% }) %>   
                                        <tr>
                                            <td colspan="10">
                                                <div style="text-align: center; font-size: 25px;">------END of Data------</div>
                                            </td>                                     
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                            <!---------- table ---------->
                        </div>
                    </div>
                    <!------------------------------------------------------------------>
                </div>
        </div>
        <%- include('footer')%>
</body>
</html>