<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Heal food</title>
    <link href="/css2/bootstrap.css" rel="stylesheet">
    <script src="/js2/bootstrap.bundle.min.js"></script>
    <link href="/fontawesome/css/all.css" rel="stylesheet">
    <script src="fontawesome/js/all.js" crossorigin="anonymous"></script>
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/styles2.css" rel="stylesheet">
    <link href="/views/dashboard/healthy/css_food.css" rel="stylesheet">
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/scripts.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const calculateButton = document.getElementById("calculateButton");
            const weightInput = document.getElementById("weightInput");
            const heightInput = document.getElementById("heightInput");
            const bmiInput = document.getElementById("bmiInput");
    
            calculateButton.addEventListener("click", function () {
                const weight = parseFloat(weightInput.value);
                const height = parseFloat(heightInput.value) / 100; // Convert cm to m
                const bmi = weight / (height * height);
                //float 2 position
                bmiInput.value = bmi.toFixed(2);
            });
        });
    </script>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!--sidebar-->   
        <%- include('menu')%> 
            <div id="page-content-wrapper">
                <nav class="navbar navbar-expand-lg navbar-dark bg-secondary border-bottom">
                    <div class="container-fluid">
                        <button class="btn btn-light" id="sidebarToggle">
                            <i class="fa-solid fa-arrows-left-right fa-2xl"></i>
                        </button>                     
                    </div>
                </nav>                
                <!----------------------------------------------------------------->
                <div class="container-fluid">
                   
                      <!---------- card ---------->
                    <div class="form-body">
                        <div class="row">
                            <div class="form-holder">
                                <div class="form-content">
                                    <div class="form-items" style="background-color: #152733">
                                        <h3>You can calculate BMI here.</h3>
                                        <p>Fill in the data below.</p>
                                        <form class="mt-3" method="post" action="/dashboard/healthy/save/BMI">
                                            <div class="col-md-12">
                                                <input class="form-control" type="text" name="weight" id="weightInput" placeholder="Please enter your weight (unit kg)" required>
                                            </div>
                                            <div class="col-md-12">
                                                <input class="form-control" type="text" name="height" id="heightInput" placeholder="Please enter your height (unit cm)" required>
                                            </div>
                                            
                                            <div class="form-button mt-3 text-center">
                                                <button type="button" id="calculateButton" class="btn btn-success">Calculate BMI</button>
                                            </div>

                                            <div class="col-md-12">
                                                <input class="form-control" type="text" name="bmi" id="bmiInput" required readonly>
                                            </div>
                                            <div class="form-button mt-3  text-center">
                                                <button type="submit" id="calculateButton" class="btn btn-success">Save data</button>
                                            </div>                   
                                        </form>    
                                    </div>                  
                                </div>  
                                <table class="table">
                                    <thead class="table-responsive-lg">
                                      <tr class="table-info">
                                        <th scope="col">BMI kg/m^2</th>
                                        <th scope="col">Appropriate</th>
                                        <th scope="col">Prone to disease</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr class="table-secondary">
                                        <th scope="row">less than 18.50</th>
                                        <td>underweight/thin</td>
                                        <td>than normal people</td>
                                      </tr>
                                      <tr class="table-secondary">
                                        <th scope="row">Between 18.50 - 22.90</th>
                                        <td>normal (healthy)</td>
                                        <td>as much as a normal person</td>
                                      </tr>
                                      <tr class="table-secondary">
                                        <th scope="row">Between 23 - 24.90</th>
                                        <td >Overweight/Obesity Level 1</td>
                                        <td>Danger Level 1</td>
                                      </tr>
                                      <tr class="table-secondary">
                                        <th scope="row">Between 25 - 29.90</th>
                                        <td >Overweight/Obesity Level 2</td>
                                        <td>Danger Level 2</td>
                                      </tr>
                                      <tr class="table-secondary">
                                        <th scope="row">More than 30</th>
                                        <td >Overweight/Obesity Level 3</td>
                                        <td>Danger Level 3</td>
                                      </tr>
                                    </tbody>
                                  </table>
                            </div>
                        </div>
                    </div>                   
                    <!---------- card ---------->
                    </div>
                </div>
                <!------------------------------------------------------------------>
            </div>      
    </div>
    <footer style="background-color: black;">
        <div class="container" >
            <p class="m-0 text-center text-white py-3">Copy Right &copy;2023 to do list </p>
        </div>
    </footer>
</body>
</html>