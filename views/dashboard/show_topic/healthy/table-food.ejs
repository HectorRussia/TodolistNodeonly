<%- include('import')%>
<body>
       <div class="d-flex" id="wrapper">
            <!--sidebar-->   
            <%- include('menu')%>
                
                <div id="page-content-wrapper">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary border-bottom">
                      <div class="container-fluid">
                          <button class="btn btn-light" id="sidebarToggle">
                              <i class="fa-solid fa-arrows-left-right fa-2xl"></i>
                          </button>                     
                      </div>
                    </nav> 
                    <!----------------------------------------------------------------->
                    <div class="container-fluid">
                        <div class="mt-4">          
                            <!---------- table ---------->
                            <h3>Edit your food <i class="fa-solid fa-file-pen fa-xl" style="color: #095253;"></i></h3>
                            <div class="mt-4">
                                <table class="table table-striped">
                                        <thead>
                                            <tr class="table-dark">
                                                <th scope="col">id</th>
                                                <th scope="col">Day</th>
                                                <th scope="col">morning</th>
                                                <th scope="col">noon</th>
                                                <th scope="col">evening</th>
                                                <th scope="col">total_kcal</th>
                                                <th scope="col">Edit</th>
                                                <th scope="col">Delete</th>
                                                <th scope="col">Success</th>
                                            </tr>
                                        </thead>
                                        <!--วนloopแสดงข้อมูล-->
                                        <% food.forEach(function(yummy){ %>
                                        
                                        <tr>
                                                <td><%= yummy.id %></td>
                                                <td><%= yummy.Day %></td>
                                                <td><%= yummy.morning %></td>
                                                <td><%= yummy.noon %></td>
                                                <td><%= yummy.evening %></td>
                                                <td><%= yummy.total_kcal %></td>
                                                <td>
                                                    <form method="get" action="/dashboard/show_topic/healthy/table_food/edit">
                                                        <div>
                                                            <button type="submit" name="edit" class="rounded-button" style="background-color:gray;">
                                                                <i class="fa-solid fa-pen-to-square fa-xl" style="color:black;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=yummy.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/healthy/table_food/delete">
                                                        <div style="padding-left: 5px;">
                                                            <button type="submit" name="delete" class="rounded-button" style="background-color:aliceblue;">
                                                                <i<i class="fa-solid fa-trash fa-xl" style="color: #f0430a;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=yummy.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/healthy/table_food/success">
                                                        <div style="padding-left: 15px;">
                                                            <button type="submit" name="success" class="rounded-button" style="background-color: #08e70c;">
                                                                <i class="fa-solid fa-check fa-xl"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=yummy.id%>">
                                                            <input type="hidden" name="Day" value="<%=yummy.Day%>">
                                                            <input type="hidden" name="morning" value="<%=yummy.morning%>">
                                                            <input type="hidden" name="noon" value="<%=yummy.noon%>">
                                                            <input type="hidden" name="evening" value="<%=yummy.evening%>">
                                                            <input type="hidden" name="total_kcal" value="<%=yummy.total_kcal%>">
                                                            <input type="hidden" name="time_stamp" value="<%=yummy.date%>">
                                                        </div>
                                                    </form>
                                                </td>
                                        </tr>
                                        <% }) %>   
                                        <tr>
                                            <td colspan="9">
                                                <div style="text-align: center; font-size: 25px;">------END of Data------</div>
                                            </td>                                     
                                        </tr>
                                </table>
                                </div>
                            </div>
                        </div>
                        <!---------- table ---------->
                        </div> 
                    </div>             
                    <!------------------------------------------------------------------>                           
                </div>
        </div>      
        <%- include('footer')%>
</body>
</html>


