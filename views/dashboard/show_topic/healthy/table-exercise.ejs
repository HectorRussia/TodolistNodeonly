<%- include('import')%>
<body>
       <div class="d-flex" id="wrapper">
            <!--sidebar-->   
            <%- include('menu')%>
                
                <div id="page-content-wrapper">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary border-bottom">
                      <div class="container-fluid">
                          <button class="btn btn-light" id="sidebarToggle">
                              <i class="fa-solid fa-arrows-left-right fa-2xl"></i>
                          </button>                     
                      </div>
                    </nav> 
                    <!----------------------------------------------------------------->
                    <div class="container-fluid">
                        <div class="mt-4">          
                            <!---------- table-excericse ---------->
                            <tr>
                                <td colspan="9">
                                    <h2>Edit your exercise <i class="fa-solid fa-file-pen fa-xl" style="color: #095253;"></i></h2>
                                </td>                                     
                            </tr>
                            <div class="mt-4"></div>
                            <table class="table table-striped">
                                <thead>
                                    <tr class="table-dark">
                                        <th scope="col">id</th>
                                        <th scope="col">Day</th>
                                        <th scope="col">name</th>
                                        <th scope="col">number_time</th>
                                        <th scope="col">number_set</th>
                                        <th scope="col">Start</th>
                                        <th scope="col">finish</th>
                                        <th scope="col">Edit</th>
                                        <th scope="col">Delete</th>
                                        <th scope="col">Success</th>
                                    </tr>
                                </thead>
                                <!--วนloopแสดงข้อมูล-->
                                <% workout.forEach(function(ex){ %>
                                
                                <tr>
                                        <td><%= ex.id %></td>
                                        <td><%= ex.Day %></td>
                                        <td><%= ex.name %></td>
                                        <td><%= ex.number_time %></td>
                                        <td><%= ex.number_set %></td>
                                        <td><%= ex.start %></td>
                                        <td><%= ex.finish %></td>
                                        <td>
                                            <form method="get" action="/dashboard/show_topic/healthy/table_exercise/edit">
                                                <div>
                                                    <button type="submit" name="edit" class="rounded-button" style="background-color:gray;">
                                                        <i class="fa-solid fa-pen-to-square fa-xl" style="color:black;"></i>
                                                    </button>
                                                    <input type="hidden" name="id" value="<%=ex.id%>">
                                                </div>
                                            </form>
                                        </td>
                                        <td>
                                            <form method="post" action="/dashboard/show_topic/healthy/table_exercise/delete">
                                                <div style="padding-left: 5px;">
                                                    <button type="submit" name="delete" class="rounded-button" style="background-color:aliceblue;">
                                                        <i<i class="fa-solid fa-trash fa-xl" style="color: #f0430a;"></i>
                                                    </button>
                                                    <input type="hidden" name="id" value="<%=ex.id%>">
                                                </div>
                                            </form>
                                        </td>
                                        <td>
                                            <form method="post" action="/dashboard/show_topic/healthy/table_exercise/success">
                                                <div style="padding-left: 15px;">
                                                    <button type="submit" name="success" class="rounded-button" style="background-color: #08e70c;">
                                                        <i class="fa-solid fa-check fa-xl"></i>
                                                    </button>
                                                    <input type="hidden" name="id" value="<%=ex.id%>">
                                                    <input type="hidden" name="Day" value="<%=ex.Day%>">
                                                    <input type="hidden" name="name" value="<%=ex.name%>">
                                                    <input type="hidden" name="number_time" value="<%=ex.number_time%>">
                                                    <input type="hidden" name="number_set" value="<%=ex.number_set%>">
                                                    <input type="hidden" name="start" value="<%=ex.start%>">
                                                    <input type="hidden" name="finish" value="<%=ex.finish%>">
                                                </div>
                                            </form>
                                        </td>
                                </tr>

                                <% }) %>   
                                <tr>
                                    <td colspan="10">
                                        <div style="text-align: center; font-size: 25px;">------END of Data------</div>
                                    </td>                                     
                                </tr>
                            </table>
                            </div>
                            </div>
                            </div>
                        </div> 
                    </div>             
                    <!------------------------------------------------------------------>                           
                </div>
        </div>      
        <%- include('footer')%>
</body>
</html>



