<%- include('import')%>
<body>
       <div class="d-flex" id="wrapper">
            <!--sidebar-->   
            <%- include('menu')%>
                
                <div id="page-content-wrapper">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary border-bottom">
                      <div class="container-fluid">
                          <button class="btn btn-light" id="sidebarToggle">
                              <i class="fa-solid fa-arrows-left-right fa-2xl"></i>
                          </button>                     
                      </div>
                    </nav> 
                    <!----------------------------------------------------------------->
                    <div class="container-fluid">
                        <div class="mt-4">          
                            <!---------- table ---------->
                            <h3>Edit your bmi <i class="fa-solid fa-file-pen fa-xl" style="color: #095253;"></i></h3>
                            <div class="mt-4">
                                <table class="table table-striped">
                                        <thead>
                                            <tr class="table-dark">
                                                <th scope="col">id</th>
                                                <th scope="col">weight</th>
                                                <th scope="col">height</th>
                                                <th scope="col">bmi</th>
                                                <th scope="col">date</th>
                                                <th scope="col">Edit</th>
                                                <th scope="col">Delete</th>
                                                <th scope="col">Success</th>
                                            </tr>
                                        </thead>
                                        <!--วนloopแสดงข้อมูล-->
                                        <% bodymassindex.forEach(function(bmi){ %>
                                        
                                        <tr>
                                                <td><%= bmi.id %></td>
                                                <td><%= bmi.weight %></td>
                                                <td><%= bmi.height %></td>
                                                <td><%= bmi.bmi %></td>
                                                <td><%= bmi.date %></td>
                                                <td>
                                                    <form method="get" action="/dashboard/show_topic/healthy/table_bmi/edit">
                                                        <div>
                                                            <button type="submit" name="edit" class="rounded-button" style="background-color:gray;">
                                                                <i class="fa-solid fa-pen-to-square fa-xl" style="color:black;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=bmi.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/healthy/table_bmi/delete">
                                                        <div style="padding-left: 5px;">
                                                            <button type="submit" name="delete" class="rounded-button" style="background-color:aliceblue;">
                                                                <i<i class="fa-solid fa-trash fa-xl" style="color: #f0430a;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=bmi.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/healthy/table_bmi/success">
                                                        <div style="padding-left: 15px;">
                                                            <button type="submit" name="success" class="rounded-button" style="background-color: #08e70c;">
                                                                <i class="fa-solid fa-check fa-xl"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=bmi.id%>">
                                                            <input type="hidden" name="weight" value="<%=bmi.weight%>">
                                                            <input type="hidden" name="height" value="<%=bmi.height%>">
                                                            <input type="hidden" name="bmi" value="<%=bmi.bmi%>">
                                                        </div>
                                                    </form>
                                                </td>
                                        </tr>
                                        <% }) %>   
                                        <tr>
                                            <td colspan="10">
                                                <div style="text-align: center; font-size: 25px;">------END of Data------</div>
                                            </td>                                     
                                        </tr>
                                </table>
                                </div>
                            </div>
                        </div>
                        <!---------- table ---------->
                        </div> 
                    </div>             
                    <!------------------------------------------------------------------>                           
                </div>
        </div>      
        <%- include('footer')%>
</body>
</html>


