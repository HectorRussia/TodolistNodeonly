<%- include('import')%>
<body>
        <div class="d-flex" id="wrapper">
            <!--sidebar-->   
            <%- include('menu')%>
                
                <div id="page-content-wrapper">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary border-bottom">
                      <div class="container-fluid">
                          <button class="btn btn-light" id="sidebarToggle">
                              <i class="fa-solid fa-arrows-left-right fa-2xl"></i>
                          </button>                     
                      </div>
                    </nav> 
                    <!----------------------------------------------------------------->
                    <div class="container-fluid">
                        <div class="mt-4">
                          <!---------- table ---------->
                                <h1>Edit your personal <i class="fa-solid fa-file-pen fa-xl" style="color: #095253;"></i></h1>
                                <div class="mt-4"></div>
                                    <table class="table table-striped">
                                        <thead>
                                            <tr class="table-dark">
                                                <th scope="col">id</th>
                                                <th scope="col">goals</th>
                                                <th scope="col">namebook</th>
                                                <th scope="col">positive</th>
                                                <th scope="col">dreams</th>	
                                                <th scope="col">Edit</th>
                                                <th scope="col">Delete</th>
                                                <th scope="col">Success</th>
                                            </tr>
                                        </thead>
                                        <!--วนloopแสดงข้อมูล-->
                                        <% personal.forEach(function(growth){ %>
                                         
                                        <tr>
                                                <td style="border: 2px solid #000; height: 30px;"><%= growth.id %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= growth.goals %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= growth.namebook %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= growth.positive %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= growth.dreams %></td>
                                                <td>
                                                    <form method="get" action="/dashboard/show_topic/peronal/tabel-peronal-edit/edit">
                                                        <div>
                                                            <button type="submit" name="edit" class="rounded-button" style="background-color:gray;">
                                                                <i class="fa-solid fa-pen-to-square fa-xl" style="color:black;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=growth.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/personal/personaling/delete">
                                                        <div style="padding-left: 5px;">
                                                            <button type="submit" name="delete" class="rounded-button" style="background-color:aliceblue;">
                                                                <i<i class="fa-solid fa-trash fa-xl" style="color: #f0430a;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=growth.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/personal/personaling/success">
                                                        <div style="padding-left: 15px;">
                                                            <button type="submit" name="success" class="rounded-button" style="background-color: #08e70c;">
                                                                <i class="fa-solid fa-check fa-xl"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=growth.id%>">
                                                            <input type="hidden" name="goals" value="<%=growth.goals%>">
                                                            <input type="hidden" name="namebook" value="<%=growth.namebook%>">
                                                            <input type="hidden" name="positive" value="<%=growth.positive%>">
                                                            <input type="hidden" name="dreams" value="<%=growth.dreams%>">
                                                        </div>
                                                    </form>
                                                </td>
                                        </tr>
                                
                                        <% }) %>   
                                        <tr>
                                            <td colspan="15">
                                                <div style="text-align: center; font-size: 25px;">------END of Data------</div>
                                            </td>                                     
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                            <!---------- table ---------->
                        </div>
                    </div>
                    <!------------------------------------------------------------------>
                </div>
        </div>
        <%- include('footer')%>
</body>
</html>