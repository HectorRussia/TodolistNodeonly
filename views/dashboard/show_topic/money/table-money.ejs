<%- include('import')%>
<body>
        <div class="d-flex" id="wrapper">
            <!--sidebar-->   
            <%- include('menu')%>
                
                <div id="page-content-wrapper">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary border-bottom">
                      <div class="container-fluid">
                          <button class="btn btn-light" id="sidebarToggle">
                              <i class="fa-solid fa-arrows-left-right fa-2xl"></i>
                          </button>                     
                      </div>
                    </nav> 
                    <!----------------------------------------------------------------->
                    <div class="container-fluid">
                        <div class="mt-4">
                          <!---------- table ---------->
                                <h1>Edit your money <i class="fa-solid fa-file-pen fa-xl" style="color: #095253;"></i></h1>
                                <div class="mt-4"></div>
                                    <table class="table table-striped">
                                        <thead>
                                            <tr class="table-dark">
                                                <th scope="col">id</th>
                                                <th scope="col">Day</th>
                                                <th scope="col">income</th>
                                                <th scope="col">expenses</th>	
                                                <th scope="col">investment</th>
                                                <th scope="col">extrajob</th>
                                                <th scope="col">savings</th>
                                                <th scope="col">note</th>
                                                <th scope="col">Time</th>
                                                <th scope="col">Edit</th>
                                                <th scope="col">Delete</th>
                                                <th scope="col">Success</th>
                                            </tr>
                                        </thead>
                                        <!--วนloopแสดงข้อมูล-->
                                        <% bath.forEach(function(dolla){ %>
                                         
                                        <tr>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.id %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.Day %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.income %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.expenses %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.investment %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.extrajob %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.savings %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.note %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= dolla.Time %></td>
                                                <td>
                                                    <form method="get" action="/dashboard/show_topic/money/table-money-edit/edit">
                                                        <div>
                                                            <button type="submit" name="edit" class="rounded-button" style="background-color:gray;">
                                                                <i class="fa-solid fa-pen-to-square fa-xl" style="color:black;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=dolla.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/money/money-bath/delete">
                                                        <div style="padding-left: 5px;">
                                                            <button type="submit" name="delete" class="rounded-button" style="background-color:aliceblue;">
                                                                <i<i class="fa-solid fa-trash fa-xl" style="color: #f0430a;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=dolla.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/money/money-bath/success">
                                                        <div style="padding-left: 15px;">
                                                            <button type="submit" name="success" class="rounded-button" style="background-color: #08e70c;">
                                                                <i class="fa-solid fa-check fa-xl"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=dolla.id%>">
                                                            <input type="hidden" name="Day" value="<%=dolla.Day%>">
                                                            <input type="hidden" name="income" value="<%=dolla.income%>">
                                                            <input type="hidden" name="expenses" value="<%=dolla.expenses%>">
                                                            <input type="hidden" name="investment" value="<%=dolla.investment%>">
                                                            <input type="hidden" name="extrajob" value="<%=dolla.extrajob%>">
                                                            <input type="hidden" name="savings" value="<%=dolla.savings%>">
                                                            <input type="hidden" name="note" value="<%=dolla.note%>">
                                                        </div>
                                                    </form>
                                                </td>
                                        </tr>
                                
                                        <% }) %>   
                                        <tr>
                                            <td colspan="15">
                                                <div style="text-align: center; font-size: 25px;">------END of Data------</div>
                                            </td>                                     
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                            <!---------- table ---------->
                        </div>
                    </div>
                    <!------------------------------------------------------------------>
                </div>
        </div>
        <%- include('footer')%>
</body>
</html>