<%- include('import')%>
<body>
        <div class="d-flex" id="wrapper">
            <!--sidebar-->   
            <%- include('menu')%>
                
                <div id="page-content-wrapper">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary border-bottom">
                      <div class="container-fluid">
                          <button class="btn btn-light" id="sidebarToggle">
                              <i class="fa-solid fa-arrows-left-right fa-2xl"></i>
                          </button>                     
                      </div>
                    </nav> 
                    <!----------------------------------------------------------------->
                    <div class="container-fluid">
                        <div class="mt-4">
                          <!---------- table ---------->
                                <h1>Edit your travel <i class="fa-solid fa-file-pen fa-xl" style="color: #095253;"></i></h1>
                                <div class="mt-4"></div>
                                    <table class="table table-striped">
                                        <thead>
                                            <tr class="table-dark">
                                                <th scope="col">id</th>
                                                <th scope="col">name_place</th>
                                                <th scope="col">start_tip</th>
                                                <th scope="col">end_tip</th>
                                                <th scope="col">vehicles</th>
                                                <th scope="col">plan_tip</th>
                                                <th scope="col">money_tip</th>
                                                <th scope="col">date</th>
                                                <th scope="col">Edit</th>
                                                <th scope="col">Delete</th>
                                                <th scope="col">Success</th>
                                            </tr>
                                        </thead>
                                        <!--วนloopแสดงข้อมูล-->
                                        <% travel.forEach(function(tip){ %>
                                         
                                        <tr>
                                                <td style="border: 2px solid #000; height: 30px;"><%= tip.id %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= tip.name_place %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= tip.start_tip %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= tip.end_tip %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= tip.vehicles %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= tip.plan_tip %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= tip.money_tip %></td>
                                                <td style="border: 2px solid #000; height: 30px;"><%= tip.date %></td>
                                                <td>
                                                    <form method="get" action="/dashboard/show_topic/travel/tabel-travel-edit/edit">
                                                        <div>
                                                            <button type="submit" name="edit" class="rounded-button" style="background-color:gray;">
                                                                <i class="fa-solid fa-pen-to-square fa-xl" style="color:black;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=tip.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/travel/traveling/delete">
                                                        <div style="padding-left: 5px;">
                                                            <button type="submit" name="delete" class="rounded-button" style="background-color:aliceblue;">
                                                                <i<i class="fa-solid fa-trash fa-xl" style="color: #f0430a;"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=tip.id%>">
                                                        </div>
                                                    </form>
                                                </td>
                                                <td>
                                                    <form method="post" action="/dashboard/show_topic/travel/traveling/success">
                                                        <div style="padding-left: 15px;">
                                                            <button type="submit" name="success" class="rounded-button" style="background-color: #08e70c;">
                                                                <i class="fa-solid fa-check fa-xl"></i>
                                                            </button>
                                                            <input type="hidden" name="id" value="<%=tip.id%>">
                                                            <input type="hidden" name="name_place" value="<%=tip.name_place%>">
                                                            <input type="hidden" name="start_tip" value="<%=tip.start_tip%>">
                                                            <input type="hidden" name="end_tip" value="<%=tip.end_tip%>">
                                                            <input type="hidden" name="vehicles" value="<%=tip.vehicles%>">
                                                            <input type="hidden" name="plan_tip" value="<%=tip.plan_tip%>">
                                                            <input type="hidden" name="money_tip" value="<%=tip.money_tip%>">
                                                            <input type="hidden" name="date" value="<%=tip.date%>">
                                                        </div>
                                                    </form>
                                                </td>
                                        </tr>
                                
                                        <% }) %>   
                                        <tr>
                                            <td colspan="15">
                                                <div style="text-align: center; font-size: 25px;">------END of Data------</div>
                                            </td>                                     
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                            <!---------- table ---------->
                        </div>
                    </div>
                    <!------------------------------------------------------------------>
                </div>
        </div>
        <%- include('footer')%>
</body>
</html>